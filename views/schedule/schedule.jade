div.schedule(ng-init="days = #{JSON.stringify(content.schedule)}.events" 
             data-scroll-index="3" class="row" id="schedule")
    div.event-day(ng-repeat="dayEvents in days" class="col-md-6")
        h3 DAY {{$index + 1}}
        div.event(
                ng-repeat="event in dayEvents"
                ng-class="{ transition: event.name.toLowerCase() === 'transition'}"
            )
            div.name {{event.name}}
            div.time {{event.startTime | timeOnly}} - {{event.endTime | timeOnly}}

